<div class="fixed inset-0 -z-10 overflow-hidden">
  <!-- Abstract shapes -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-gray-900 dark:to-gray-800">
    <div class="absolute top-0 left-0 w-96 h-96 bg-purple-300/20 dark:bg-purple-600/10 rounded-full filter blur-3xl transform -translate-x-1/2 -translate-y-1/2 animate-float"></div>
    <div class="absolute top-1/4 right-0 w-96 h-96 bg-blue-300/20 dark:bg-blue-600/10 rounded-full filter blur-3xl transform translate-x-1/2 animate-float-delayed"></div>
    <div class="absolute bottom-0 left-1/3 w-96 h-96 bg-indigo-300/20 dark:bg-indigo-600/10 rounded-full filter blur-3xl animate-float-slow"></div>
  </div>
  
  <!-- Grid pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-10 dark:opacity-5"></div>
</div>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes float-delayed {
    0%, 100% { transform: translateY(0) translateX(50%); }
    50% { transform: translateY(-20px) translateX(50%); }
  }

  @keyframes float-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .animate-float {
    animation: float 15s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 18s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 20s ease-in-out infinite;
  }

  .bg-grid-pattern {
    background-image: linear-gradient(to right, rgba(0,0,0,0.1) 1px, transparent 1px),
                      linear-gradient(to bottom, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 50px 50px;
  }
</style>
